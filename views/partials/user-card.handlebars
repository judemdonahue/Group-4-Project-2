{{!-- {{#each users as |user|}} --}}
<div class="user card container w-50">
  <div class="row card-header h-2">
    <img class="mr-4" src="images/PlacegholderPFP.png" alt="user picture">
    <span class="col-3">{{this.username}}</span>
    <span class="col-3 offset-6">last task completion: {{getLastCompletionTime this.tasks}}</span>
  </div>
  <div>Total points: {{this.total_points}}</div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Progress bar</li>
    {{#each this.tasks}}
    <li class="list-item d-flex container-fluid">
      <div class="container d-block row">
        <h3>{{this.id}}</h3>
        <p>{{this.task_name}}</p>
        <p>
          {{#if this.UserTask.completed}}
            Finished
          {{else}}
            Not Finished
          {{/if}}
        </p>
      </div>
      <h1 class="daily mr-3">+ยง X</h1>
    </li>
    {{/each}}
  </ul>
</div>




