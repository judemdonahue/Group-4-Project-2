{{!-- To fill user feed cards in homepage. Also use for sidebar? --}}

{{!-- User, streak if any --}}
{{!-- Progress bar with points. x/100 pts for the day --}}
{{!-- Task list for the day(complete or incomplete) --}}
{{!-- Time of last completion --}}

<div class="user card container w-50 mt-3">
  <div class="row card-header h-2"> 
      <img class="col-2" src="images/PlacegholderPFP.png" alt="user picture">
      <h5 class="col-3 mt-2">{{this.username}}</h5>
      <span class="col-3 offset-4">last task completion:<br>5/21 @ 12:22pm {{!-- {{getLastCompletionTime this.task}} --}} </span>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Total points: {{this.total_points}}</li>
    <li class="list-group-item ">Progress bar Placeholder</li>
    {{#each this.tasks}}
    <li class="list-group-item container align-middle">
      <div class="row">
        <h5 class="col-1">{{this.id}}</h5>
        <div class="col-8">
          <p>
            {{this.task_name}}
            {{#if this.UserTask.completed}}
              Finished
            {{else}}
              Not Finished
            {{/if}}
          </p>
        </div>
      
      <h5 class="daily col-2 align-right">+ยง X</h5>
      </div>
    </li>
    {{/each}}
  </ul>
</div>
